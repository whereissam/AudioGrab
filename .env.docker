# Docker environment configuration for AudioGrab
# Copy this file to .env and fill in your values

# =============================================================================
# PORTS
# =============================================================================
API_PORT=8000
WHISPER_PORT=8001
FRONTEND_PORT=3000

# =============================================================================
# TWITTER/X AUTHENTICATION
# =============================================================================
# Required for downloading from X Spaces and X Video
TWITTER_AUTH_TOKEN=
TWITTER_CT0=

# =============================================================================
# WHISPER SERVICE (GPU)
# =============================================================================
# Model size: tiny, base, small, medium, large-v2, large-v3, turbo, distil-large-v3
WHISPER_MODEL=base

# Device: cuda (GPU) or cpu
WHISPER_DEVICE=cuda

# Compute type: float16 (GPU), int8 (CPU), float32 (CPU fallback)
WHISPER_COMPUTE_TYPE=float16

# =============================================================================
# LLM PROVIDER (for summarization)
# =============================================================================
# Provider: ollama, openai, anthropic, openai_compatible
LLM_PROVIDER=ollama

# Ollama (if using local Ollama)
OLLAMA_BASE_URL=http://host.docker.internal:11434

# OpenAI (if using OpenAI)
OPENAI_API_KEY=

# Anthropic (if using Claude)
ANTHROPIC_API_KEY=

# =============================================================================
# HUGGING FACE (for speaker diarization)
# =============================================================================
HUGGINGFACE_TOKEN=

# =============================================================================
# STORAGE MANAGEMENT
# =============================================================================
# Enable automatic cleanup
STORAGE_CLEANUP_ENABLED=true

# Maximum storage limit (GB) - leave empty for no limit
MAX_STORAGE_GB=

# Minimum free space to maintain (GB) - leave empty for no limit
MIN_FREE_SPACE_GB=

# =============================================================================
# SECURITY
# =============================================================================
# API key for authentication (leave empty for open access)
API_KEY=

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# MONITORING (optional)
# =============================================================================
# Sentry DSN for error tracking
SENTRY_DSN=

# =============================================================================
# CLOUD STORAGE (optional)
# =============================================================================
# S3-compatible storage
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_BUCKET=
S3_REGION=us-east-1
S3_ENDPOINT_URL=

# Google Drive
GOOGLE_DRIVE_CLIENT_ID=
GOOGLE_DRIVE_CLIENT_SECRET=

# Dropbox
DROPBOX_APP_KEY=
DROPBOX_APP_SECRET=
